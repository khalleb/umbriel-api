{
  "name": "umbriel-api",
  "version": "1.0.0",
  "description": "umbriel-api",
  "main": "index.js",
  "author": "khallebw@gmail.com",
  "license": "MIT",
  "scripts": {
    "dev:server": "ts-node-dev -r tsconfig-paths/register --inspect=0.0.0.0:9229 --respawn --transpile-only --ignore-watch node_modules src/shared/infra/http/server.ts | pino-pretty -c",
    "dev:worker": "ts-node-dev -r tsconfig-paths/register --inspect=0.0.0.0:9230 --transpile-only --exit-child --ignore-watch node_modules src/shared/infra/http/worker.ts | pino-pretty -c",
    "build": "babel src --extensions \".js,.ts\" --out-dir dist --copy-files",
    "start:server": "node dist/shared/infra/http/server.js",
    "start:worker": "node dist/shared/infra/worker.js",
    "typeorm": "ts-node-dev -r tsconfig-paths/register --transpile-only ./node_modules/typeorm/cli.js",
    "typeorm-run": "yarn typeorm migration:run",
    "style": "npx eslint --fix . && npx prettier --write .",
    "seed:config": "ts-node-dev -r tsconfig-paths/register --transpile-only ./node_modules/typeorm-seeding/dist/cli.js config",
    "seed:run": "ts-node-dev -r tsconfig-paths/register --transpile-only ./node_modules/typeorm-seeding/dist/cli.js seed",
    "update-version": "ts-node-dev -r tsconfig-paths/register --inspect --transpile-only --ignore-watch node_modules src/shared/infra/http/updateVersion.ts | pino-pretty -c"
  },
  "dependencies": {
    "aws-sdk": "^2.996.0",
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.19.0",
    "bullmq": "^1.48.2",
    "celebrate": "^15.0.0",
    "class-transformer": "^0.4.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "date-fns": "^2.23.0",
    "dotenv": "^10.0.0",
    "ejs": "^3.1.6",
    "envalid": "^7.2.1",
    "express": "^4.17.1",
    "express-async-errors": "^3.1.1",
    "handlebars": "^4.7.7",
    "helmet": "^4.6.0",
    "html-to-text": "^8.0.0",
    "http-status": "^1.5.0",
    "inline-css": "^3.0.0",
    "ioredis": "^4.27.9",
    "jsonwebtoken": "^8.5.1",
    "lodash": "^4.17.21",
    "multer": "^1.4.3",
    "nodemailer": "^6.6.3",
    "pg": "^8.7.1",
    "pino": "^6.13.1",
    "reflect-metadata": "^0.1.13",
    "tsyringe": "^4.6.0",
    "typeorm": "^0.2.37",
    "typeorm-seeding": "^1.6.1",
    "ua-parser-js": "^0.7.28",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/body-parser": "^1.19.1",
    "@types/compression": "^1.7.1",
    "@types/cors": "^2.8.12",
    "@types/ejs": "^3.1.0",
    "@types/express": "^4.17.13",
    "@types/html-to-text": "^8.0.1",
    "@types/inline-css": "^3.0.1",
    "@types/ioredis": "^4.27.1",
    "@types/jsonwebtoken": "^8.5.5",
    "@types/lodash": "^4.14.172",
    "@types/multer": "^1.4.7",
    "@types/node": "^15.12.1",
    "@types/nodemailer": "^6.4.4",
    "@types/pg": "^8.6.1",
    "@types/pino": "^6.3.11",
    "@types/ua-parser-js": "^0.7.36",
    "@types/uuid": "^8.3.1",
    "@typescript-eslint/eslint-plugin": "^4.30.0",
    "@typescript-eslint/parser": "^4.30.0",
    "eslint": "^7.32.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-import-resolver-typescript": "^2.4.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-import-helpers": "^1.1.0",
    "eslint-plugin-prettier": "^4.0.0",
    "pino-pretty": "^6.0.0",
    "prettier": "^2.3.2",
    "ts-node-dev": "^1.1.8",
    "tsconfig-paths": "^3.11.0",
    "typescript": "^4.4.2"
  }
}
